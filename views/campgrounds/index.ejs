<% layout('layouts/boilerplate') %>
    <div id="map" style="width: 100%; height: 500px"></div>
    <div class="container">
        <div class="row my-4">
            <div class="d-grid col-md-6 mx-auto">
            <h1>All Campgrounds</h1>
        </div>
        <ul>
            <% for(let camp of campgrounds){ %>
                <div class="card mb-3">
                    <div class="row">
                        <div class="col-md-4">
                            <%if(camp.images.length) {%>
                                <img crossorigin="anonymous" class="img-fluid" alt="" src="<%=camp.images[0].url%>">
                                <% }else {%>
                                    <img class="img-fluid" crossorigin="anonymous" alt=""
                                        src="https://res.cloudinary.com/douqbebwk/image/upload/v1600103881/YelpCamp/lz8jjv2gyynjil7lswf4.png">
                                    <% } %>
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <%= camp.title %>
                                </h5>
                                <p class="">
                                    <%= camp.description %>
                                </p>
                                <p class="card-text text-muted">
                                    <%= camp.location %>
                                </p>
                                <a class="btn btn-info" href="/campgrounds/<%= camp._id %>">View Details
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <% } %>
        </ul>
    </div>
    <script>
        const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
        // const campgroundString = '<%-(JSON.stringify(campgrounds))%>'
        // console.log(campgroundString)
        const campgrounds = { features: <%-JSON.stringify(campgrounds)%> }
    </script>

    <script src="/javascripts/clusterMaps.js"></script>