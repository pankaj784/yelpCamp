<% layout('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">Edit Campground</h1>
        <div class="col-md-6 offset-md-3">
            <form action="/campgrounds/<%= camp._id %>?_method=PUT" method="POST" class="needs-validation" novalidate
                enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for=" title">Title</label>
                    <input class="form-control" type=" text" name="campground[title]" id="title" value="<%=camp.title%>"
                        required>
                    <div class="valid-feedback">Looks good!!</div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" name="campground[location]" id="location"
                        value="<%= camp.location%>" required>
                    <div class="valid-feedback">Looks good!!</div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="price">Campground Price</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-label">$</span>
                        <input class="form-control" type="text" name="campground[price]" id="price"
                            value="<%= camp.price%>" required>
                        <div class="valid-feedback">Looks good!!</div>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea name="campground[description]" id="description" cols="30" rows="10" class="form-control"
                        required><%= camp.description%></textarea>
                    <div class="valid-feedback">Looks good!!</div>
                </div>
                <div class="input-group mb-3">
                    <label class="input-group-text" for="image">Add more image(s)</label>
                    <input type="file" class="form-control" id="image" name="image" multiple>
                </div>
                <div class="mb-3">
                    <% camp.images.forEach(function(img, i) { %>
                        <img crossorigin="anonymous" src="<%=img.thumbnail %>" class="img-thumbnail" alt="">
                        <div class="form-check-inline">
                            <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%=img.filename%>">
                        </div>
                        <label for="image-<%=i%>">Delete?</label>
                        <% }) %>
                            <div class="mb-3">
                                <button class="btn btn-success">Update Campground</button>
                            </div>
            </form>
            <a href="/campgrounds/<%= camp._id %> ">Back To Campground</a>
        </div>
    </div>